---
import { siteConfig } from '../config/site';
import Button from './ui/Button.astro';
import SocialLinks from './SocialLinks.astro';
---
<section id="about" class="min-h-screen flex items-center justify-center bg-gradient-to-br from-indigo-50 to-blue-100">
  <div class="text-center">
    {siteConfig.avatar && (
      <img
        src={siteConfig.avatar}
        alt={siteConfig.name}
        class="w-32 h-32 rounded-full mx-auto mb-8 object-cover border-4 border-white shadow-lg"
      />
    )}
    <h1 class="text-5xl font-bold text-gray-900 mb-4">{siteConfig.name}</h1>
    <p class="text-xl text-gray-600 mb-8">{siteConfig.title}</p>
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
      <Button href="#projects">View Projects</Button>
      <Button href="#contact" variant="outline">Get in Touch</Button>
    </div>
    <div class="mt-8">
      <SocialLinks />
    </div>
  </div>
</section>
